{
  "name": "coachmira-advisor-server",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:clean": "pkill -f 'tsx watch src/index.ts' || true && sleep 1 && npm run dev",
    "stop": "pkill -f 'tsx watch src/index.ts'",
    "restart": "npm run stop && sleep 1 && npm run dev",
    "build": "tsc",
    "start": "node dist/index.js",
    "verify-db": "tsx src/scripts/verify-database.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@elevenlabs/elevenlabs-js": "^2.28.0",
    "@google/genai": "^1.34.0",
    "@supabase/supabase-js": "^2.89.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "resend": "^6.6.0",
    "svix": "^1.84.1",
    "ws": "^8.18.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}
